{
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/**/*", "../shared/**/*", "../src/engine/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
